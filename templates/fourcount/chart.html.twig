{% extends 'base.html.twig' %}

{% block title %}Balance Chart{% endblock %}

{% block body %}
    <h2>Balance</h2>
    
    {% for key,value in balance %}
        <p>{{key}} | 
        
        {% if value < 0 %}
            <span style="color:red">{{value}}</span>
        {% else %}
            <span style="color:green">{{value}}</span>
        {% endif %}            
        </p>
    {% endfor %}

    {{ render_chart(chart) }}

{% endblock %}
